<div class="nested-fields">
  <div class="row">
    <div class="col-lg-12 text-right">
      <%= link_to_remove_association "-", f, class: 'btn btn-danger btn-xs' %>
      </div
      <div class="col-lg-12">
        <div class="col-lg-6">
          <div class="form-group">
            <label>Enfermedad, Accidente</label>
            <%= f.text_field :illness_accident, class: 'form-control' %>
          </div>
        </div>
        <div class="col-lg-2">
          <div class="form-group">
            <label>Asociado al trabajo</label>
            <div class="radio">
              <label>
                <%= f.radio_button :associated_with_work, "si" %>Si
              </label>
              <label>
                <%= f.radio_button :associated_with_work, "no" %>No
              </label>
            </div>
          </div>
        </div>
        <div class="col-lg-2">
          <div class="form-group">
            <label>Año</label>
            <%= f.text_field :year, class: 'form-control just-number', maxlength: 4 %>
          </div>
        </div>
        <div class="col-lg-2">
          <div class="form-group">
            <label>Días de descanso</label>
            <%= f.text_field :days_off, class: 'form-control just-number', maxlength: 3 %>
          </div>
        </div>
      </div>
    </div>
  </div>

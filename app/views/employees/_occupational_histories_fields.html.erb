<div class="nested-fields">
  <div class="row">
    <div class="col-lg-12 text-right">
      <%= link_to_remove_association "-", f, class: 'btn btn-danger btn-xs' %>
    </div>
    <div class="col-lg-12">
      <div class="col-lg-2">
        <div class="form-group">
          <label>Empresa</label>
          <%= f.text_field :company, class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-2">
        <div class="form-group">
          <label>Área de trabajo</label>
          <%= f.text_field :work_area, class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-2">
        <div class="form-group">
          <label>Ocupación</label>
          <%= f.text_field :ocupation, class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-2">
        <div class="form-group">
          <label>Fecha de inicio</label>
          <%= f.date_field :date_init, class: 'form-control' %>
          <label>Fecha de salida</label>
          <%= f.date_field :date_finish, class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-1">
        <div class="form-group">
          <label>Tiempo</label>
          <%= f.text_field :time, class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-2">
        <div class="form-group">
          <label>Exposición o.</label>
          <%= f.text_field :ocupational_exposure, class: 'form-control' %>
        </div>
      </div>
      <div class="col-lg-1">
        <div class="form-group">
          <label>EPP</label>
          <%= f.text_field :epp, class: 'form-control' %>
        </div>
      </div>
    </div>
  </div>
</div>

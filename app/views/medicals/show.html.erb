<div class="row">
  <div class="col-xs-12">
    <h2 class="page-header">
      <i class="fa fa-globe"></i> <%= @medical.firstname %> <%= @medical.lastname %>
      <small class="pull-right">Fecha de nacimiento: <%= @medical.birthday.strftime(" %m-%d-%Y") %></small>
    </h2>
  </div>
</div>
<div class="row invoice-info">
  <div class="col-sm-4 invoice-col">
    <% if @medical.dni.present? %>
    <strong>DNI:</strong>
    <address>
      <%= @medical.dni %>
    </address>
    <% end %>
    <% if @medical.phone.present? %>
    <strong>Teléfono:</strong>
    <address>
      <%= @medical.phone %>
    </address>
    <% end %>
    <% if @medical.email.present? %>
    <strong>Email:</strong>
    <address>
      <%= @medical.email %>
    </address>
    <% end %>
    <% if @medical.specialty.present? %>
    <strong>Especialidad:</strong>
    <address>
      <%= @medical.specialty %>
    </address>
    <% end %>
    <% if @medical.area_id.present? %>
    <strong>Área:</strong>
    <address>
      <%= Area.find(@medical.area_id).name %>
    </address>
    <% end %>
    <% if @medical.sex.present? %>
    <strong>Sexo:</strong>
    <address>
      <%= @medical.sex %>
    </address>
    <% end %>
  </div>
  <div class="col-sm-4 invoice-col">
    <% if @medical.address.present? %>
    <strong>Dirección:</strong>
    <address>
      <%= @medical.address %>
    </address>
    <% end %>
    <% if @medical.way.present? %>
    <strong>Av/Calle/Jirón/Pasaje:</strong>
    <address>
      <%= @medical.way %>
    </address>
    <% end %>
    <% if @medical.numb_depart_int.present? %>
    <strong>Nro/Departamento/Interior:</strong>
    <address>
      <%= @medical.numb_depart_int %>
    </address>
    <% end %>
    <% if @medical.urbanization.present? %>
    <strong>Urbanización:</strong>
    <address>
      <%= @medical.urbanization %>
    </address>
    <% end %>
    <% if @medical.province.present? %>
    <strong>Provincia:</strong>
    <address>
      <%= @medical.province %>
    </address>
    <% end %>
    <% if @medical.district.present? %>
    <strong>Distrito:</strong>
    <address>
      <%= @medical.district %>
    </address>
    <% end %>
    <% if @medical.department.present? %>
    <strong>Departamento:</strong>
    <address>
      <%= @medical.department %>
    </address>
    <% end %>
  </div>
  <div class="col-sm-4 invoice-col">
    <% if @medical.civil_status.present? %>
    <strong>Estado civil:</strong>
    <address>
      <%= @medical.civil_status %>
    </address>
    <% end %>
    <% if @medical.degree_instruction.present? %>
    <strong>Grado de instrucción:</strong>
    <address>
      <%= @medical.degree_instruction %>
    </address>
    <% end %>
    <% if @medical.interests.present? %>
    <strong>Intereses:</strong>
    <address>
      <%= @medical.interests %>
    </address>
    <% end %>
  </div>
</div>
<div class="row no-print">
  <div class="col-xs-12">
    <%= link_to medicals_path, class:"btn btn-danger pull-right", style: "margin-right: 5px;" do %>
    <i class="fa fa-500px"></i> Volver
    <% end %>
    <%= link_to edit_medical_path(@medical), class:"btn btn-success pull-right",style: "margin-right: 5px;" do %>
    <i class="fa fa-bars"></i> Editar
    <% end %>
    <%= link_to medical_path(format: :pdf, id: @medical.id),class:"btn btn-primary pull-right", style:"margin-right: 5px;", target: '_blank'  do %>
    <i class="fa fa-download"></i> Exportar a PDF
    <% end %>
  </div>
</div>

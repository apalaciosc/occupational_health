<div class="col-lg-12">
  <div class="col-lg-2">
    <div class="form-group">
      <label>DNI</label>
      <%= form.text_field :dni, class: 'form-control just-number dni-employee', maxlength: 8 %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group">
      <label>Nombres</label>
      <%= form.text_field :firstname, class: 'form-control' %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group">
      <label>Apellidos</label>
      <%= form.text_field :lastname, class: 'form-control' %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
      <label>Domicilio fiscal</label>
      <%= form.text_field :address, class: 'form-control' %>
    </div>
  </div>
  <div class="col-lg-2">
    <div class="form-group">
      <label>F.de nacimiento</label>
      <%= form.date_field :birthday, class: 'form-control datepicker' %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group">
      <label>Especialidad</label>
      <%= form.text_field :specialty, class: 'form-control' %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group">
      <label>Sexo</label>
      <%= form.select(:sex, sex_medical_for_select, { include_blank: 'Seleccionar sexo' }, {class: "form-control"}) %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group ">
      <label>Estado civil</label>
      <%= form.select(:civil_status, civil_status_medical_for_select, { include_blank: 'Seleccionar estado civil' }, :class => "form-control") %>
    </div>
  </div>
</div>
<div class="col-lg-12">
  <div class="col-lg-3">
    <div class="form-group ">
      <label>Av/calle/Jr/Pasaje</label>
      <%= form.text_field :way, class: 'form-control' %>
    </div>
  </div>
  <div class="col-lg-2">
    <div class="form-group ">
      <label>N°/Depart/Interior</label>
      <%= form.text_field :numb_depart_int, class: 'form-control just-number' %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group">
      <label>Urbanización</label>
      <%= form.text_field :urbanization, class: 'form-control' %>
    </div>
  </div>
  <div class="col-lg-2">
    <div class="form-group ">
      <label>Departamento</label>
      <%= form.text_field :department, class: 'form-control' %>
    </div>
  </div>
  <div class="col-lg-2">
    <div class="form-group ">
      <label>Provincia</label>
      <%= form.text_field :province, class: 'form-control' %>
    </div>
  </div>
</div>
<div class="col-lg-12">
  <div class="col-lg-2">
    <div class="form-group ">
      <label>Distrito</label>
      <%= form.text_field :district, class: 'form-control' %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group">
      <label>Área</label>
      <%= form.select(:area_id, area_id_for_select, { include_blank: 'Seleccionar área' }, {class: "form-control chosen"}) %>
    </div>
  </div>
  <div class="col-lg-2">
    <div class="form-group">
      <label>Teléfono</label>
      <%= form.text_field :phone, class: 'form-control just-number', maxlength: 9 %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group">
      <label>Email</label>
      <%= form.text_field :email, class: 'form-control validate-email' %>
    </div>
  </div>
  <div class="col-lg-3">
    <div class="form-group ">
      <label>Grado de instrucción</label>
      <%= form.text_field :degree_instruction, class: 'form-control' %>
    </div>
  </div>
</div>
<div class="col-lg-12">
  <div class="col-lg-6">
    <div class="form-group">
      <label>Intereses</label>
      <%= form.text_field :interests, class: 'form-control' %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="nav-tabs-custom">
      <ul class="nav nav-tabs">
        <li class="active">
          <a data-toggle="tab" href="#medical" aria-expanded="true">Datos principales</a>
        </li>
        <% if @edit == 1 %>
        <li>
          <a data-toggle="tab" href="#occupational_history" aria-expanded="false">Antecedentes ocupacionales</a>
        </li>
        <li>
          <a data-toggle="tab" href="#pathologicals_history" aria-expanded="false">Antecedentes patológicos personales</a>
        </li>
        <li>
          <a data-toggle="tab" href="#pathologicals_history_family" aria-expanded="false">Antecedentes patológicos familiares</a>
        </li>
        <li>
          <a data-toggle="tab" href="#absentismo">Absentismo</a>
        </li>
        <% end %>
      </ul>
      <%= form_for @medical do |form| %>
      <div class="tab-content">
        <div class="tab-pane active" id="medical">
          <div class="box box-default">
            <div class="box-header with-border">
              <div class="box-tools pull-right">
                <button class="btn btn-box-tool" data-widget="collapse" type="button">
                  <i class="fa fa-minus"></i>
                </button>
              </div>
            </div>
            <div class="box-body">
              <% if medical.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(medical.errors.count, "error") %> prohibited this medical from being saved:</h2>
                <ul>
                  <% medical.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>
              <div class="row">
                <%= render partial: 'medicals/partials/medical', locals: { form: form } %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="box-body">
        <div class="form-group">
          <div class="col-lg-12 text-center">
            <%= form.submit 'Guardar', class:'btn btn-primary' %>
            <%= link_to 'Volver', medicals_path, class:'btn btn-danger' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

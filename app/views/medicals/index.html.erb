<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Médicos</h3>
        <div class="box-tools">
          <form class="" action="/medicals" method="get">
            <div class="row">
              <div class="col-lg-2 col-xs-6 text-right">
                <div class="btn-group">
                  <button type="button" class="btn btn-block btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false" >
                    <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu">
                    <li>
                      <%= link_to medicals_path(format: :pdf, search: @search), target: '_blank' do %>
                      Exportar a pdf
                      <% end %>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="col-lg-10 col-xs-6 text-right">
                <div class="input-group input-group-sm" style="width: 150px;">
                  <input type="text" name="search" class="form-control pull-right" placeholder="Buscar" <%= @search %> >
                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tbody>
            <tr>
              <th>Nombre</th>
              <th>Dni</th>
              <th>Dirección</th>
              <th>Celular</th>
              <th>Rango</th>
              <th>Especialidad</th>
              <th>Área</th>
              <th colspan="2"></th>
            </tr>
            <% @medicals.each do |medical| %>
            <tr>
              <td><%= link_to medical.firstname, medical %></td>
              <td><%= medical.dni %></td>
              <td><%= medical.address %></td>
              <td><%= medical.phone %></td>
              <td><%= medical.range %></td>
              <td><%= medical.specialty %></td>
              <td><%= medical.area.name.capitalize if medical.area.name.present? %></td>
              <% if current_user.role_id == 'admin' %>
              <td><%= link_to 'Editar', edit_medical_path(medical) %></td>
              <td><%= link_to 'Eliminar', medical, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
              <% else %>
              <a></a>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= will_paginate @medicals, previous_label: "Atrás", next_label: "Siguiente", innner_window:1, outer_window: 0,renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>

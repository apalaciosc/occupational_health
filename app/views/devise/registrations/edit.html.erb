<div class="row">
  <div class="col-md-12">
    <div class="box box-info">
      <div class="box-header with-border">
        <h3 class="box-title">Cambiar contraseña</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'forms-horizontal'  }) do |f| %>
      <%= devise_error_messages! %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="box-body">
        <div class="form-group">
          <div class="row">
            <div class="col-lg-12">
              <label for="inputEmail3" class="col-sm-2 control-label">Contraseña</label>
              <div class="col-sm-10">
                <%= f.password_field :password, :class => "form-control input-sm", autocomplete: "new-password" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> caracteres como mínimo</em>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-lg-12">
              <label for="inputEmail3" class="col-sm-2 control-label">Confirmación de la contraseña</label>
              <div class="col-sm-10">
                <%= f.password_field :password_confirmation, :class => "form-control input-sm", autocomplete: "new-password" %>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-lg-12">
              <label for="inputEmail3" class="col-sm-2 control-label">Contraseña actual</label>
              <div class="col-sm-10">
                <%= f.password_field :current_password, autocomplete: "current-password", :class => "form-control input-sm" %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="box-footer">
        <%= link_to "Volver", root_path, class:'btn btn-default' %>
        <%= f.submit 'Guardar', class:'btn btn-info pull-right' %>
      </div>
      <% end %>
    </div>
  </div>
</div>

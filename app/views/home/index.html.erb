<% if user_signed_in? %>
<section class="content">
  <div class="row">
    <div class="col-md-3">
      <div class="box box-primary">
        <div class="box-body box-profile">
          <% if !current_user.avatar.url(:thumb).include? '/avatars/thumb/missing.png' %>
          <%= image_tag current_user.avatar.url(:thumb), alt:'User profile picture', class: "profile-user-img img-responsive img-circle" %>
          <% else %>
          <%= image_tag ('default-profile.jpg'), alt:'User profile picture', class: "profile-user-img img-responsive img-circle" %>
          <% end %>
          <h3 class="profile-username text-center"><%= current_user.email if !current_user.name.present? %></h3>
          <h3 class="profile-username text-center"><%= current_user.name %></h3>
          <p class="text-muted text-center"><%= current_user.position if current_user.position.present? %></p>
          <%= link_to "Editar perfil" , edit_user_registration_path , class: 'btn btn-primary btn-block' %>
        </div>
      </div>
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Acerca de mi</h3>
        </div>
        <div class="box-body">
          <strong><i class="fa fa-book margin-r-5"></i> Aptitudes</strong>
          <p class="text-muted"><%= current_user.aptitude if current_user.aptitude.present? %></p>
          <hr>
          <strong><i class="fa fa-map-marker margin-r-5"></i> Direcci√≥n</strong>
          <p class="text-muted"><%= current_user.address if current_user.address.present? %></p>
          <hr>
          <strong><i class="fa fa-file-text-o margin-r-5"></i> Intereses</strong>
          <p><%= current_user.interests if current_user.interests.present? %></p>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
          <li class="active"><a href="#activity" data-toggle="tab" aria-expanded="true">Principal</a></li>
        </ul>
        <div class="tab-content">
          <div class="tab-pane active" id="activity">
            <div class="post">
              <div class="row margin-bottom">
                <div class="col-sm-6">
                  <img class="img-responsive" src="<%= asset_path 'home-main.jpg' %>" alt="Photo" style="height: 255px">
                </div>
                <div class="col-sm-6">
                  <div class="row">
                    <div class="col-sm-6">
                      <img class="img-responsive" src="<%= asset_path 'home1.jpg' %>" alt="Photo">
                      <br>
                      <img class="img-responsive" src="<%= asset_path 'home2.jpg' %>" alt="Photo">
                    </div>
                    <div class="col-sm-6">
                      <img class="img-responsive" src="<%= asset_path 'home3.jpg' %>" alt="Photo">
                      <br>
                      <img class="img-responsive" src="<%= asset_path 'home4.png' %>" alt="Photo">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<% end %>

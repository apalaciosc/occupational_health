<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Empresas</h3>
        <a data-toggle="modal" data-target="#modalCreate" data-backdrop="static" data-keyboard="false">
          <img src="<%= asset_path 'User_Ad.ico' %>">
        </a>
        <div class="box-tools">
          <form class="" action="/enterprises" method="get">
            <div style="float: left; margin-right: 3px;height:3px" >
              <%= link_to enterprises_path(format: :pdf, search: @search), target: '_blank' do %>
                <%= image_tag ('pdft.jpg') %>
              <% end %>
            </div>
            <div class="input-group input-group-sm" style="width: 150px;">
              <input type="text" name="search" class="form-control pull-right" placeholder="Buscar" <%= @search %> >
              <div class="input-group-btn">
                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tbody>
            <tr>
              <th>Ruc</th>
              <th>Nombre</th>
              <th>Actividad económica</th>
              <th>Lugar de trabajo</th>
              <th>Departamento</th>
              <th>Provincia</th>
              <th>Distrito</th>
              <th colspan="3"></th>
            </tr>
            <% @enterprises.each do |enterprise| %>
            <tr>
              <td><%= enterprise.ruc %></td>
              <td><%= enterprise.name %></td>
              <td><%= enterprise.economic_activity %></td>
              <td><%= enterprise.workplace %></td>
              <td><%= enterprise.departament %></td>
              <td><%= enterprise.province %></td>
              <td><%= enterprise.district %></td>
              <td><a data-toggle="modal" data-target="#modalUpdate<%= enterprise.id %>" data-backdrop="static" data-keyboard="false"><img src="<%= asset_path 'User_Editar.ico' %>"></a></td>
              <td><%= link_to image_tag('User_Eliminar.ico'), enterprise, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
       <%= will_paginate @employees, previous_label: "Atras", next_label: "Siguiente", innner_window:1, outer_window: 0,renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>

<div class="container">
  <div class="modal" id="modalCreate">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="col-lg-12">
            <div class="col-lg-11 text-center">
              <h4 class="modal-title">Registrar Empresa</h4>
            </div>
            <div class="col-lg-1 text-right">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
          </div>
        </div>
        <%= form_for(@enterprise, url: enterprises_path, remote: 'true') do |form| %>
        <%= render partial: 'enterprises/form', locals: { form: form, edit: 0 } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% @enterprises.each do |enterprise| %>
<div class="container modalUpdate">
  <div class="modal" id="modalUpdate<%= enterprise.id %>">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div class="col-lg-12">
            <div class="col-lg-11 text-center">
              <h4 class="modal-title">Actualizar Empresa</h4>
            </div>
            <div class="col-lg-1 text-right">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
          </div>
        </div>
        <%= form_for(enterprise, url: enterprise_path(enterprise.id), remote: 'true') do |form| %>
        <%= render partial: 'enterprises/form', locals: { form: form, edit: 1 } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>

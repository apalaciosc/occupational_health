<div class="row">
  <div class="col-md-12">
    <div class="box box-info">
      <div class="box box-default">
        <div class="box-body">
          <div class="form-group">
            <div class="row">
              <div class="col-lg-2">
                <label class="col-lg-12">Radiología</label>
              </div>
              <div class="col-lg-9">
                <%= text_field_tag "exam[data][type_radiologia]", @exam.data[:type_radiologia], value: @type_exam.name.capitalize , class: 'form-control col-lg-12',readonly: true %>
              </div>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="form-group">
              <label>Informe:</label>
              <p>Según incidencia radiológica se muestra lo siguiente:</p>
              <%= text_area_tag "exam[data][report]", @exam.data[:report], class: 'form-control', rows: '4' %>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="form-group">
              <label>Conclusiones:</label>
              <%= text_area_tag "exam[data][conclusion]", @exam.data[:conclusion], class: 'form-control', rows: '4' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= form_for(@exam, url: save_exam_path, remote: 'true') do |f| %>
<%= hidden_field_tag "exam[type_exam_id]", "#{@type_exam.id}" %>
<% if @edit == 0 %>
<%= hidden_field_tag "exam[attention_id]", "#{@attention.id}" %>
<% else %>
<%= hidden_field_tag "exam[exam_id]", "#{@exam.id}" %>
<% end %>
<div class="row">
  <div class="col-md-12">
    <div class="box box-info">
      <div class="box box-default">
        <div class="box-body">
          <div class="form-group">
            <div class="row">
              <div class="col-lg-2">
                <label class="col-lg-12">Laboratorio</label>
              </div>
              <div class="col-lg-9">
                <%= text_field_tag "exam[data][type_laboratory]", @exam.data[:type_laboratory], value: @type_exam.name.capitalize , class: 'form-control col-lg-12',readonly: true %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-lg-2">
                <label class="col-lg-12">ERITOGRAMA</label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-lg-2">
                <label class="col-lg-12">Eritrocitos</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_1]", @exam.data[:text_1], class: 'form-control col-lg-12' %>
              </div>
              <div class="col-lg-2">
                <label class="col-lg-12">Hemoglobina</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_2]", @exam.data[:text_2], class: 'form-control col-lg-12' %>
              </div>
              <div class="col-lg-2">
                <label class="col-lg-12">Hematócrito</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_3]", @exam.data[:text_3], class: 'form-control col-lg-12' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-lg-2">
                <label class="col-lg-12">VCM</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_4]", @exam.data[:text_4], class: 'form-control col-lg-12' %>
              </div>
              <div class="col-lg-2">
                <label class="col-lg-12">HCM</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_5]", @exam.data[:text_5], class: 'form-control col-lg-12' %>
              </div>
              <div class="col-lg-2">
                <label class="col-lg-12">CHCM</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_6]", @exam.data[:text_6], class: 'form-control col-lg-12' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-lg-2">
                <label class="col-lg-12">LEUCOGRAMA</label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-lg-2">
                <label class="col-lg-12">Leucósitos</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_7]", @exam.data[:text_7], class: 'form-control col-lg-12' %>
              </div>
              <div class="col-lg-2">
                <label class="col-lg-12">Neutrófilos</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_8]", @exam.data[:text_8], class: 'form-control col-lg-12' %>
              </div>
              <div class="col-lg-2">
                <label class="col-lg-12">Metamielócitos</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_9]", @exam.data[:text_9], class: 'form-control col-lg-12' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-lg-2">
                <label class="col-lg-12">Bastonetes</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_10]", @exam.data[:text_10], class: 'form-control col-lg-12' %>
              </div>
              <div class="col-lg-2">
                <label class="col-lg-12">Segmentados</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_11]", @exam.data[:text_11], class: 'form-control col-lg-12' %>
              </div>
              <div class="col-lg-2">
                <label class="col-lg-12">Eosinófilos</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_12]", @exam.data[:text_12], class: 'form-control col-lg-12' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-lg-2">
                <label class="col-lg-12">Basófilos</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_13]", @exam.data[:text_13], class: 'form-control col-lg-12' %>
              </div>
              <div class="col-lg-2">
                <label class="col-lg-12">Linfocitos</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_14]", @exam.data[:text_14], class: 'form-control col-lg-12' %>
              </div>
              <div class="col-lg-2">
                <label class="col-lg-12">Monocitos</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_15]", @exam.data[:text_15], class: 'form-control col-lg-12' %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-lg-2">
                <label class="col-lg-12">Plaquetas</label>
              </div>
              <div class="col-lg-2">
                <%= text_field_tag "exam[data][text_16]", @exam.data[:text_16], class: 'form-control col-lg-12' %>
              </div>
            </div>
          </div>
          <div class="col-lg-12">
            <div class="form-group">
              <label>Observaciones:</label>
              <%= text_area_tag "exam[data][observations]", @exam.data[:observations], class: 'form-control', rows: '2' %>
            </div>
          </div>
        </div>
        <div class="box-body">
          <div class="form-group">
            <div class="col-sm-offset-5 col-sm-10">
              <%= f.submit 'Guardar', class:'btn btn-primary' %>
              <%= link_to 'Volver', :back, class:'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
